@model CarInsuranceCalculator.Models.Models.InsurerTypeOfInsurance

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Tariff number for this type of insurance</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InsurerId" />
            <input type="hidden" asp-for="TypeOfInsuranceId" />
            <div class="form-group">
                <label class="control-label">Type of Insurance</label>
                <h4 class="form-control">@ViewBag.TypesOfInsurance</h4>
            </div>
            <div class="form-group">
                <label asp-for="TariffNumber" class="control-label">Tariff number</label>
                <input asp-for="TariffNumber" class="form-control" />
                <span asp-validation-for="TariffNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

