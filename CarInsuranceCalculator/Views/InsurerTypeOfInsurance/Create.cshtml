@model CarInsuranceCalculator.Models.Models.InsurerTypeOfInsurance

@{
    ViewData["Title"] = "Create";
}

<h2>Add</h2>

<h4>Type of insurance to Insurer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TypeOfInsurance.Name" class="control-label"></label>
                <select asp-for="TypeOfInsuranceId" class="form-control" asp-items=@(new SelectList(ViewBag.TypeOfInsuranceList,"Id","Name"))></select>
            </div>
            <div class="form-group">
                <label asp-for="TariffNumber" class="control-label">Tariff number</label>
                <input asp-for="TariffNumber" class="form-control" />
                <span asp-validation-for="TariffNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
