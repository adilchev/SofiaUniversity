@model CarInsuranceCalculator.Data.Models.RiskOrBonus

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Risk/Bonus</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nomenclature" class="control-label"></label>
                <input asp-for="Nomenclature" class="form-control" />
                <span asp-validation-for="Nomenclature" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category.Name" class="control-label">Category name</label>
                <select asp-for="CategoryId" class="form-control" asp-items=@(new SelectList(ViewBag.CategoryList,"Id","Name"))></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
