@model CarInsuranceCalculator.Models.Models.InsurerRiskOrBonus

@{
    ViewData["Title"] = "Create";
}

<h2>Add</h2>

<h4>Risk/Bonus to Insurer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RiskOrBonus.Nomenclature" class="control-label"></label>
                <select asp-for="RiskOrBonusId" class="form-control" asp-items=@(new SelectList(ViewBag.RisksOrBonuses,"Id","Nomenclature"))></select>
            </div>
            <div class="form-group">
                <label asp-for="TariffNumberChange" class="control-label">Tariff number change</label>
                <input asp-for="TariffNumberChange" class="form-control" />
                <span asp-validation-for="TariffNumberChange" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
