@model CarInsuranceCalculator.Models.Models.InsurerRiskOrBonus

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Tariff number for Risk/Bonus</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InsurerId" />
            <input type="hidden" asp-for="RiskOrBonusId" />
            <div class="form-group">
                <label class="control-label">Category Name</label>
                <input hidden="" />
                <h4 class="form-control">@ViewBag.Categories </h4>
            </div>
            <div class="form-group">
                <label class="control-label">Risk/Bonus Nomenclature</label>
                <h4 class="form-control">@ViewBag.RisksOrBonuses</h4>
            </div>
            <div class="form-group">
                <label asp-for="TariffNumberChange" class="control-label"></label>
                <input asp-for="TariffNumberChange" class="form-control" />
                <span asp-validation-for="TariffNumberChange" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
