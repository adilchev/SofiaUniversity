@model CarInsuranceCalculator.Data.Models.Insurer

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Insurer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ApplicationUserId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            @if (User.IsInRole("Insurer"))
            {<div class="form-group">
                    <label asp-for="MaximumDiscount" class="control-label">Maximum Discount</label>
                    <input asp-for="MaximumDiscount" class="form-control" />
                    <span asp-validation-for="MaximumDiscount" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <label asp-for="ApplicationUserId" class="control-label">Email</label>
                <input asp-for="ApplicationUser.Email" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUserId" class="control-label">Phone number</label>
                <input asp-for="ApplicationUser.PhoneNumber" class="form-control">
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

